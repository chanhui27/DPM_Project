<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/student_module_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

        <RelativeLayout
            android:id="@+id/student_cardview_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EBEBEB">

            <TextView
                android:id="@+id/student_text_view_module_code"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/border"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:text="Code"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/blackColor" />

            <TextView
                android:id="@+id/student_text_view_module_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/student_text_view_module_code"
                android:background="@drawable/border"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/blackColor" />
            <ImageView
                android:id="@+id/cardview_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_lock"
                android:visibility="gone" />

        </RelativeLayout>


</androidx.cardview.widget.CardView>