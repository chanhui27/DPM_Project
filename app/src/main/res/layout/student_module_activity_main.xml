<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e0cc"
    tools:context=".StudentModuleActivity"
    android:fitsSystemWindows="true"
    android:screenOrientation="portrait"
    tools:openDrawer="start">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <!--<include
        android:id="@+id/student_pathway_toolbar"
        layout="@layout/pathway_toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />-->

    <LinearLayout
        android:id="@+id/student_pathway_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <Spinner
            android:id="@+id/student_pathway_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blackColor"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:spinnerMode="dropdown"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/pathway_toolbar" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            app:layout_constraintStart_toEndOf="@id/student_pathway_spinner" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/student_year_semester_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_pathway_linear_layout">

        <Spinner
            android:id="@+id/student_year_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blackColor"
            android:entries="@array/years_array"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/student_semester_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blackColor"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:spinnerMode="dropdown" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/student_pathway_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/student_year_semester_linear_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:listitem="@layout/student_module_item" />


    <!--<Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/spinner_background"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pathway_toolbar" />
-->

</androidx.constraintlayout.widget.ConstraintLayout>