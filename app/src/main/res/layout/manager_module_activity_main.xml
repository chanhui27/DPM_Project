<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e0cc"
    tools:context=".StudentModuleActivity">


        <!--<include
            android:id="@+id/manager_pathway_toolbar"
            layout="@layout/pathway_toolbar"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/manager_pathway_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <Spinner
                android:id="@+id/manager_pathway_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blackColor"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/pathway_toolbar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manager_year_semester_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manager_pathway_linear_layout">

            <Spinner
                android:id="@+id/manager_year_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blackColor"
                android:entries="@array/years_array"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/manager_semester_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blackColor"
                android:entries="@array/semesters_array"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/manager_pathway_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/manager_year_semester_linear_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:listitem="@layout/module_item" />


        <!--<Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"

            android:background="@android:drawable/spinner_background"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pathway_toolbar" />
    -->

</androidx.constraintlayout.widget.ConstraintLayout>