<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dpm_project">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.screen.portrait" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ManagerMain"
            android:screenOrientation="portrait"/>
        <activity android:name=".ManagerPassword"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreen"
            android:theme="@style/MyThemeNoBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PopActivity"
            android:theme="@style/AppTheme.PopMe"
            android:screenOrientation="portrait"/>

        <activity android:name=".ModuleActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".StudentModuleActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ManagerModuleActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".about"
            android:screenOrientation="portrait"/>

        <activity android:name=".ManagePopActivity"
            android:screenOrientation="portrait"/>


    </application>

</manifest>